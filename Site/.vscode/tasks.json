{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "develop",
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "group": "build"
        },
        {
            "label": "dev build",
            "type": "npm",
            "script": "build",
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "group": "build",
            "options": {
                "env": {
                    "GATSBY_ACTIVE_ENV": "dev"
                }
            }
        },
        {
            "label": "beta build",
            "type": "npm",
            "script": "betabuild",
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "group": "build",
            "options": {
                "env": {
                    "GATSBY_ACTIVE_ENV": "beta"
                }
            }
        },
        {
            "type": "npm",
            "script": "publish",
            "problemMatcher": [
                "$eslint-stylish"
            ]
        }
    ]
}